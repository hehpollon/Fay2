<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/pale_grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rl_confirmothersdialogadapter">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="21dp"
            app:civ_border_color="@color/indigo_blue"
            app:civ_border_width="1dp"
            app:civ_fill_color="@color/pale_purple"
            android:src="@drawable/default_img"
            android:layout_centerVertical="true"
            android:id="@+id/civ_confirmothersdialogadapter_profile"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Confirmothersname"
            android:textStyle="bold"
            android:text="김민희"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="16dp"
            android:id="@+id/tv_confirmothersdialogadapter_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Confirmothersbank"
                android:text="신한은행"
                android:id="@+id/tv_confirmothersdialogadapter_bank"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Confirmothersaccount"
                android:text="110-123-123456"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_confirmothersdialogadapter_account"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyish"
        android:id="@+id/view_confirmothersdialogadapter_bottomline"/>

</FrameLayout>